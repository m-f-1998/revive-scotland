{
  "name": "revive-scotland-server",
  "version": "1.0.0",
  "description": "Server for Revive Scotland",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "prestart": "npm i",
    "start": "node --env-file=.env --watch ./ server.js",
    "dev": "npm run prestart && npx --yes nodemon -e ts --exec \"tsc && node ./dist/server.js\"",
    "lint": "npx --yes eslint",
    "lint:fix": "npx --yes eslint --fix",
    "tsc-verify": "npx --yes tsc --noEmit"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.0",
    "mime": "^4.1.0",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "@types/sanitize-html": "^2.16.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript-eslint": "^8.44.0"
  }
}
