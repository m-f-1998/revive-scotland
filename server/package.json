{
  "name": "revive-scotland-server",
  "version": "1.0.0",
  "description": "Server for Revive Scotland",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prestart": "npm i",
    "start": "node --env-file=.env --watch ./ index.js",
    "dev": "npm run prestart && npx --yes nodemon -e ts --exec \"tsc && node ./dist/index.js\"",
    "lint": "npx --yes eslint",
    "lint:fix": "npx --yes eslint --fix",
    "tsc-verify": "npx --yes tsc --noEmit"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.9",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/nodemailer": "^7.0.2",
    "@types/sanitize-html": "^2.16.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript-eslint": "^8.46.2"
  }
}
